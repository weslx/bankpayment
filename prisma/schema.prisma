

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id    Int     @id @default(autoincrement())
  nome String
  sobrenome String
  NomeLoja String? 
  cpf String @unique
  cnpj String? 
  email String @unique
  senha String
  status String? @default("Usuario")
  infousuario infousuario[]
  infotelegram infotelegram?
}

model infousuario {
  id Int @id @default(autoincrement())
  userId Int @unique
  saldo Float @default(0)
  user users @relation(fields: [userId], references: [id])
  SessionToken String @unique
}

model infotelegram {
  id Int @id @default(autoincrement())
  chatId Int? @unique
  nome String ?
  sobrenome String?
  username String?
  Tag String? @unique
  userId Int @unique
  user users @relation(fields: [userId], references: [id])
}
